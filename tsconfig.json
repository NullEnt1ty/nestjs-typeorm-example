{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "strictNullChecks": true
  },
  "exclude": ["node_modules"]
}
